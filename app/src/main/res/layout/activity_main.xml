<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.project1.MainActivity">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/tank2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="ICC ENGINEERING"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight=".4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/detailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="0dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="We are the construction company.\nWe specializing in building oil tanks and reservoirs of any capacity and complexity."
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/addressIcon"
                android:layout_margin="10dp"
                android:layout_below="@id/detailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mapmarker"/>

            <TextView
                android:layout_below="@id/detailsText"
                android:layout_toEndOf="@id/addressIcon"
                android:layout_toRightOf="@id/addressIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Lidonu street 6a, Riga, LATVIA"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/phoneIcon"
                android:layout_margin="10dp"
                android:layout_below="@id/addressIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addressIcon"
                android:layout_toEndOf="@id/phoneIcon"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_toRightOf="@id/phoneIcon"
                android:text="+371 29585476"
                android:textSize="18sp" />

            <ImageView
                android:contentDescription="email"
                android:layout_margin="10dp"
                android:layout_below="@id/phoneIcon"
                android:id="@+id/emailIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneIcon"
                android:layout_toEndOf="@id/phoneIcon"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_toRightOf="@id/phoneIcon"
                android:text="info@icc.lv"
                android:textSize="18sp" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
